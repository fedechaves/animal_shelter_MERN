<%- include('partials/header') -%>
<div class="container">
  <div class="row justify-content-center mt-5">
    <div class="col-6">
      <h2><%= pet.title %></h2>
      <img class="img-fluid" src="<%= pet.image%>" />
      <div class="row justify-content-between">
        <form
          class="col-1"
          action="/recipe/likePet/<%= pet.id %>?_method=PUT"
          method="POST"
        >
          <button class="btn btn-primary fa fa-heart" type="submit"></button>
        </form>
        <form
          class="col-1"
          action="/pet/favoritePet/<%= pet.id %>" method="POST"
        >
          <button class="btn btn-primary fa fa-star" type="submit"></button>
        </form>
        <h3 class="col-3">Likes: <%= pet.likes %></h3>
        <%if(pet.user == user.id){ %>
        <form
          action="/pet/deletePet/<%= pet.id %>?_method=DELETE"
          method="POST"
          class="col-3"
        >
          <button class="btn btn-primary fa fa-trash" type="submit"></button>
        </form>
        <%}%>
      </div>
    </div>
    <div class="col-3 mt-5">
      <p><%= pet.breed %></p>
    </div>
    <div class="col-3 mt-5">
      <p><%= pet.gender %></p>
    </div>

    <div class="col-6 mt-5">
      <a class="btn btn-primary" href="/profile">Return to Profile</a>
      <a class="btn btn-primary" href="/feed">Return to Feed</a>
    </div>
  </div>
</div>

<%- include('partials/footer') -%>
